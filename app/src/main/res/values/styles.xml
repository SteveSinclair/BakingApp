<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="RecipeName">
        <item name="android:textSize">@dimen/text_recipe_name</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Serves">
        <item name="android:textSize">@dimen/text_serves</item>
        <item name="android:textColor">@android:color/holo_orange_light</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="Ingredients">
        <item name="android:textSize">@dimen/text_ingredient</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Step">
        <item name="android:textSize">@dimen/text_step</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/stepColor</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">@bool/center_vertical</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Ingredients_Title">
        <item name="android:textSize">@dimen/text_ingredients_title</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


</resources>
